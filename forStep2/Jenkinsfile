pipeline {
    agent { label 'worker' }

    environment {
        DOCKERHUB = credentials('dockerhub')
        IMAGE_NAME = "nodejs-test"
        IMAGE_TAG = "latest"
        APP_DIR = "forStep2"
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                sh '''
                  echo "Building Docker image from $APP_DIR ..."
                  docker build -t $DOCKERHUB_USR/$IMAGE_NAME:$IMAGE_TAG $APP_DIR
                '''
            }
        }

        stage('Push Docker Image') {
    steps {
        withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKERHUB_USER', passwordVariable: 'DOCKERHUB_PSW')]) {
            sh '''
                echo "$DOCKERHUB_PSW" | docker login -u "$DOCKERHUB_USER" --password-stdin
                docker push micker5904/nodejs-test:latest
            '''
        }
    }
}
        
        stage('Run Tests') {
            steps {
                script {
                    def status = sh(
                        script: "docker run --rm $DOCKERHUB_USR/$IMAGE_NAME:$IMAGE_TAG npm test",
                        returnStatus: true
                    )
                    if (status != 0) {
                        echo "Tests failed"
                        error("Tests failed")
                    }
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                sh '''
                  echo "$DOCKERHUB_PSW" | docker login -u "$DOCKERHUB_USR" --password-stdin
                  docker push $DOCKERHUB_USR/$IMAGE_NAME:$IMAGE_TAG
                '''
            }
        }
    }
}

